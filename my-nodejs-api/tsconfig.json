{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "outDir": "./dist",
    "target": "es2022",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": ["src/**/*"], 
  "exclude": [
    "node_modules",
    "dist"
  ]
}
