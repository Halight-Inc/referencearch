{
	"name": "my-nodejs-api",
	"version": "1.0.0",
	"description": "A Node.js API project using an ORM and Docker.",
	"main": "dist/app.js",
	"type": "module",
	"scripts": {
		"dev": "tsx --watch --env-file .env src/app.ts",
		"start": "node --env-file .env dist/app.js",
		"build": "tsc -p tsconfig.build.json",
		"type-check": "tsc --noEmit",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"test": "vitest",
		"test:run": "vitest --run",
		"test:ui": "vitest --ui",
		"coverage": "vitest run --coverage",
		"prepare": "husky"
	},
	"dependencies": {
		"@splitsoftware/splitio": "^11.1.0",
		"bcryptjs": "^3.0.2",
		"body-parser": "^1.20.3",
		"cors": "^2.8.5",
		"dotenv": "^16.4.7",
		"express": "^4.21.2",
		"jsonwebtoken": "^9.0.2",
		"pg": "^8.13.3",
		"reflect-metadata": "^0.2.2",
		"stripe": "^17.7.0",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.1",
		"typeorm": "^0.3.20"
	},
	"devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "~5.3.3", 
    "@eslint/js": "^9.21.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/express": "^5.0.0",
    "@types/node": "^20.11.24",
    "@vitest/coverage-v8": "^3.0.7",
    "@vitest/ui": "^3.0.7",
    "eslint": "^8.56.0",
    "eslint-plugin-perfectionist": "^3.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.2",
    "tsx": "^4.19.3"
  },

	"imports": {
		"#*": "./src/*"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint",
			"prettier --check"
		],
		"*.{json,yml,yaml,md}": [
			"prettier --check"
		]
	},
	"author": "Sean Hogg",
	"license": "MIT"
}
